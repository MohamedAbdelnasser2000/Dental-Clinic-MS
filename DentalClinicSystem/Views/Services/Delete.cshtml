@model DentalClinicSystem.Models.Service
@{
    ViewData["Title"] = "Delete Service";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash me-2 text-danger"></i>Delete Service</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h6><i class="fas fa-warning me-2"></i>Warning!</h6>
                    <p class="mb-0">
                        Are you sure you want to delete this service? This action cannot be undone.
                        All related appointments and treatments will be affected.
                    </p>
                </div>
                
                <h6 class="text-primary mb-3">
                    <i class="fas fa-info-circle me-2"></i>Service Details
                </h6>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">
                            <strong>Service Name:</strong>
                            <span class="text-muted">@Model.ServiceName</span>
                        </div>
                        <div class="mb-2">
                            <strong>Category:</strong>
                            <span class="text-muted">@(Model.Category ?? "Not specified")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">
                            <strong>Price:</strong>
                            <span class="text-success fw-bold">@Model.Price.ToString("C")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Duration:</strong>
                            <span class="text-muted">@Model.Duration minutes</span>
                        </div>
                        <div class="mb-2">
                            <strong>Created:</strong>
                            <span class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-3">
                        <strong>Description:</strong>
                        <p class="text-muted mt-1">@Model.Description</p>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mb-3">
                        <strong>Service Image:</strong>
                        <div class="mt-2">
                            <img src="@Model.ImagePath" alt="@Model.ServiceName" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
                        </div>
                    </div>
                }
                
                <hr class="my-4">
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="ServiceId" />
                    
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-info me-2">
                            <i class="fas fa-eye me-2"></i>View Details
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Service
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Important Information</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Before Deleting:</h6>
                    <ul class="mb-0 small">
                        <li>Check if this service has active appointments</li>
                        <li>Verify no treatments are using this service</li>
                        <li>Consider deactivating instead of deleting</li>
                        <li>Backup important data if needed</li>
                    </ul>
                </div>
                
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb me-2"></i>Alternative:</h6>
                    <p class="mb-0 small">
                        Instead of deleting, you can deactivate this service to preserve historical data
                        while preventing new bookings.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Service Summary</h6>
            </div>
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-tooth fa-3x text-primary mb-2"></i>
                    <h6 class="text-primary">@Model.ServiceName</h6>
                </div>
                
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-success mb-1">@Model.Price.ToString("C")</h5>
                            <small class="text-muted">Price</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h5 class="text-info mb-1">@Model.Duration</h5>
                        <small class="text-muted">Minutes</small>
                    </div>
                </div>
                
                <div class="mt-3">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.ServiceId" class="btn btn-info">
                        <i class="fas fa-eye me-2"></i>View Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.ServiceId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Service
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list me-2"></i>All Services
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.bg-pink {
    background-color: #e91e63 !important;
}
</style>
