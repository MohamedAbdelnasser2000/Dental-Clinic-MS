@model DentalClinicSystem.Models.Service
@{
    ViewData["Title"] = "Service Details";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-cogs me-2 text-primary"></i>Service Details</h2>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.ServiceId" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.ServiceId" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-tooth me-2"></i>@Model.ServiceName
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") ms-2">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-info-circle me-2"></i>Basic Information
                        </h6>
                        <div class="mb-2">
                            <strong>Service Name:</strong>
                            <span class="text-muted">@Model.ServiceName</span>
                        </div>
                        <div class="mb-2">
                            <strong>Category:</strong>
                            <span class="text-muted">@(Model.Category ?? "Not specified")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-dollar-sign me-2"></i>Pricing & Duration
                        </h6>
                        <div class="mb-2">
                            <strong>Price:</strong>
                            <span class="text-success fw-bold">@Model.Price.ToString("C")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Duration:</strong>
                            <span class="text-muted">@Model.Duration minutes</span>
                        </div>
                        @if (Model.EstimatedDurationMinutes.HasValue)
                        {
                            <div class="mb-2">
                                <strong>Estimated Duration:</strong>
                                <span class="text-muted">@Model.EstimatedDurationMinutes minutes</span>
                            </div>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <hr class="my-4">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-file-alt me-2"></i>Description
                    </h6>
                    <p class="text-muted">@Model.Description</p>
                }
                
                <hr class="my-4">
                <h6 class="text-primary mb-3">
                    <i class="fas fa-calendar me-2"></i>Timeline
                </h6>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>Created At:</strong>
                            <span class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                        </div>
                    </div>
                    @if (Model.UpdatedAt.HasValue)
                    {
                        <div class="col-md-6">
                            <div class="mb-2">
                                <strong>Last Updated:</strong>
                                <span class="text-muted">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                            </div>
                        </div>
                    }
                </div>
                
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <hr class="my-4">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-image me-2"></i>Service Image
                    </h6>
                    <div class="text-center">
                        <img src="@Model.ImagePath" alt="@Model.ServiceName" class="img-fluid rounded shadow" style="max-height: 300px;">
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Service Statistics</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-tooth fa-3x text-primary mb-2"></i>
                        <h5 class="text-primary">@Model.ServiceName</h5>
                    </div>
                    
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-success mb-1">@Model.Price.ToString("C")</h4>
                                <small class="text-muted">Price</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="text-info mb-1">@Model.Duration</h4>
                            <small class="text-muted">Minutes</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.ServiceId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Service
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.ServiceId" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Service
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list me-2"></i>All Services
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.bg-pink {
    background-color: #e91e63 !important;
}
</style>
