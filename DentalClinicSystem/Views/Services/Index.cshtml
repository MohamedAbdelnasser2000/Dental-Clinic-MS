@model IEnumerable<DentalClinicSystem.Models.Service>
@{
    ViewData["Title"] = "Services Management";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-cogs me-2 text-primary"></i>Services Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Service
    </a>
</div>

<!-- Search Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" name="searchString" value="@ViewBag.SearchString" placeholder="Search services by name or description...">
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-search me-1"></i>Search
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-undo me-1"></i>Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Services Cards -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var service in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div class="service-icon me-3">
                                <i class="fas fa-tooth fa-2x text-primary"></i>
                            </div>
                            <span class="badge @(service.IsActive ? "bg-success" : "bg-danger")">
                                @(service.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                        
                        <h5 class="card-title">@service.ServiceName</h5>
                        
                        <p class="card-text text-muted">
                            @if (!string.IsNullOrEmpty(service.Description))
                            {
                                @(service.Description.Length > 100 ? service.Description.Substring(0, 100) + "..." : service.Description)
                            }
                            else
                            {
                                <em>No description available</em>
                            }
                        </p>
                        
                        <div class="row mb-3">
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="fw-bold text-success">$@service.Price.ToString("N0")</div>
                                    <small class="text-muted">Price</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center">
                                    <div class="fw-bold text-info">@service.Duration min</div>
                                    <small class="text-muted">Duration</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>
                                Added: @service.CreatedAt.ToString("MMM yyyy")
                            </small>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@service.ServiceId" class="btn btn-sm btn-outline-info" title="View Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@service.ServiceId" class="btn btn-sm btn-outline-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@service.ServiceId" class="btn btn-sm btn-outline-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        
        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <div class="col-12">
                <nav aria-label="Services pagination" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@ViewBag.SearchString">Previous</a>
                            </li>
                        }

                        @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewBag.SearchString">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@ViewBag.SearchString">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-cogs fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No services found</h5>
                <p class="text-muted">Start by adding your first service to the system.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Add New Service
                </a>
            </div>
        </div>
    }
</div>

<!-- Summary Cards -->
@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h5>Total Services</h5>
                    <h3>@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h5>Active Services</h5>
                    <h3>@Model.Count(s => s.IsActive)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h5>Average Price</h5>
                    <h3>$@(Model.Any() ? Model.Average(s => s.Price).ToString("N0") : "0")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h5>Avg Duration</h5>
                    <h3>@(Model.Any() ? Model.Average(s => s.Duration).ToString("N0") : "0") min</h3>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .service-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
    }
    
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
</style>
