@model DentalClinicSystem.Models.Treatment
@{
    ViewData["Title"] = "Edit Treatment";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit me-2 text-warning"></i>Edit Treatment</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-procedures me-2"></i>Edit Treatment Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <input type="hidden" asp-for="TreatmentId" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PatientId" class="form-label">Patient <span class="text-danger">*</span></label>
                            <select asp-for="PatientId" class="form-select" asp-items="ViewBag.Patients">
                                <option value="">-- Select Patient --</option>
                            </select>
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="DentistId" class="form-label">Dentist <span class="text-danger">*</span></label>
                            <select asp-for="DentistId" class="form-select" asp-items="ViewBag.Dentists">
                                <option value="">-- Select Dentist --</option>
                            </select>
                            <span asp-validation-for="DentistId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TreatmentType" class="form-label">Treatment Type <span class="text-danger">*</span></label>
                            <select asp-for="TreatmentType" class="form-select">
                                <option value="">-- Select Treatment Type --</option>
                                <option value="General Examination">General Examination</option>
                                <option value="Teeth Cleaning">Teeth Cleaning</option>
                                <option value="Dental Filling">Dental Filling</option>
                                <option value="Tooth Extraction">Tooth Extraction</option>
                                <option value="Root Canal">Root Canal</option>
                                <option value="Crown Installation">Crown Installation</option>
                                <option value="Bridge Installation">Bridge Installation</option>
                                <option value="Dental Implant">Dental Implant</option>
                                <option value="Orthodontics">Orthodontics</option>
                                <option value="Teeth Whitening">Teeth Whitening</option>
                                <option value="Oral Surgery">Oral Surgery</option>
                                <option value="Gum Treatment">Gum Treatment</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="TreatmentType" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TreatmentDate" class="form-label">Treatment Date <span class="text-danger">*</span></label>
                            <input asp-for="TreatmentDate" type="date" class="form-control" />
                            <span asp-validation-for="TreatmentDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Cost" class="form-label">Cost <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="Cost" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                                <span class="input-group-text">SAR</span>
                            </div>
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label">Status <span class="text-danger">*</span></label>
                            <select asp-for="Status" class="form-select">
                                <option value="">-- Select Status --</option>
                                <option value="Scheduled">Scheduled</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Postponed">Postponed</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DurationMinutes" class="form-label">Duration (Minutes)</label>
                            <input asp-for="DurationMinutes" type="number" min="1" max="480" class="form-control" placeholder="Example: 30" />
                            <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="TeethTreated" class="form-label">Teeth Treated</label>
                            <input asp-for="TeethTreated" class="form-control" placeholder="Example: 11, 12, 21" />
                            <span asp-validation-for="TeethTreated" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Detailed treatment description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ClinicalNotes" class="form-label">Clinical Notes</label>
                        <textarea asp-for="ClinicalNotes" class="form-control" rows="3" placeholder="Detailed clinical notes..."></textarea>
                        <span asp-validation-for="ClinicalNotes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PostTreatmentInstructions" class="form-label">Post-Treatment Instructions</label>
                        <textarea asp-for="PostTreatmentInstructions" class="form-control" rows="3" placeholder="Instructions for patient after treatment..."></textarea>
                        <span asp-validation-for="PostTreatmentInstructions" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NextAppointmentSuggested" class="form-label">Next Appointment Suggested</label>
                        <input asp-for="NextAppointmentSuggested" type="date" class="form-control" />
                        <span asp-validation-for="NextAppointmentSuggested" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.TreatmentId" class="btn btn-info">
                            <i class="fas fa-eye me-2"></i>View Details
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <!-- Current Treatment Info -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Current Treatment Information</h6>
            </div>
            <div class="card-body">
                <p class="small mb-1"><strong>Treatment ID:</strong> @Model.TreatmentId</p>
                <p class="small mb-1"><strong>Created At:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy hh:mm tt")</p>
                @if (Model.UpdatedAt.HasValue)
                {
                    <p class="small mb-0"><strong>Last Updated:</strong> @Model.UpdatedAt.Value.ToString("MMM dd, yyyy hh:mm tt")</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
