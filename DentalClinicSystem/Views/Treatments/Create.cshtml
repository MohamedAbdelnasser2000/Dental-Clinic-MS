@model DentalClinicSystem.Models.Treatment
@{
    ViewData["Title"] = "Add New Treatment";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-plus-circle me-2 text-primary"></i>Add New Treatment</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-procedures me-2"></i>Treatment Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PatientId" class="form-label">Patient *</label>
                            @Html.DropDownListFor(m => m.PatientId, ViewBag.Patients as SelectList, "Select Patient", new { @class = "form-select", @required = "required" })
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="DentistId" class="form-label">Dentist *</label>
                            @Html.DropDownListFor(m => m.DentistId, ViewBag.Dentists as SelectList, "Select Dentist", new { @class = "form-select", @required = "required" })
                            <span asp-validation-for="DentistId" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TreatmentType" class="form-label">Treatment Type *</label>
                            <select asp-for="TreatmentType" class="form-select" required>
                                <option value="">Select Treatment Type</option>
                                <option value="Regular Checkup">Regular Checkup</option>
                                <option value="Dental Cleaning">Dental Cleaning</option>
                                <option value="Dental Filling">Dental Filling</option>
                                <option value="Root Canal">Root Canal</option>
                                <option value="Tooth Extraction">Tooth Extraction</option>
                                <option value="Crown Placement">Crown Placement</option>
                                <option value="Bridge Work">Bridge Work</option>
                                <option value="Dental Implant">Dental Implant</option>
                                <option value="Orthodontic Treatment">Orthodontic Treatment</option>
                                <option value="Teeth Whitening">Teeth Whitening</option>
                                <option value="Gum Treatment">Gum Treatment</option>
                                <option value="Emergency Treatment">Emergency Treatment</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="TreatmentType" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="TreatmentDate" class="form-label">Treatment Date *</label>
                            <input asp-for="TreatmentDate" type="date" class="form-control" required />
                            <span asp-validation-for="TreatmentDate" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Cost" class="form-label">Cost ($) *</label>
                            <input asp-for="Cost" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" required />
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Status" class="form-label">Status *</label>
                            <select asp-for="Status" class="form-select" required>
                                <option value="">Select Status</option>
                                <option value="Scheduled">Scheduled</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Additional notes about the treatment..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Treatment
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Treatment Guidelines</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb me-2"></i>Tips:</h6>
                    <ul class="mb-0 small">
                        <li>Select the appropriate patient and dentist</li>
                        <li>Choose the correct treatment type</li>
                        <li>Set realistic treatment dates</li>
                        <li>Include accurate cost information</li>
                        <li>Add detailed notes for future reference</li>
                    </ul>
                </div>
                
                <div class="alert alert-warning">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Important:</h6>
                    <p class="mb-0 small">Make sure all required fields are filled correctly before saving the treatment record.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Set default date to today
        document.addEventListener('DOMContentLoaded', function() {
            const dateInput = document.querySelector('input[type="date"]');
            if (dateInput && !dateInput.value) {
                dateInput.value = new Date().toISOString().split('T')[0];
            }
        });
    </script>
}
