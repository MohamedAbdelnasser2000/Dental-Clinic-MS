@model DentalClinicSystem.Models.Invoice
@{
    ViewData["Title"] = "Print Invoice";
    Layout = null; // No layout for print view
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoice @Model.InvoiceNumber - Dental Clinic</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { font-family: Arial, sans-serif; }
        .invoice-header { border-bottom: 2px solid #007bff; padding-bottom: 20px; margin-bottom: 30px; }
        .clinic-info { text-align: right; }
        .invoice-details { background-color: #f8f9fa; padding: 15px; border-radius: 5px; }
        .total-section { background-color: #e9ecef; padding: 15px; border-radius: 5px; }
        @@media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; }
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <!-- Print Button -->
        <div class="no-print mb-3">
            <button onclick="window.print()" class="btn btn-primary">
                <i class="fas fa-print me-2"></i>Print Invoice
            </button>
            <button onclick="window.close()" class="btn btn-secondary ms-2">
                <i class="fas fa-times me-2"></i>Close
            </button>
        </div>

        <!-- Invoice Header -->
        <div class="invoice-header">
            <div class="row">
                <div class="col-md-6">
                    <h1 class="text-primary">DENTAL CLINIC</h1>
                    <p class="mb-1"><strong>Address:</strong> 123 Medical Street</p>
                    <p class="mb-1"><strong>Phone:</strong> +1 (555) 123-4567</p>
                    <p class="mb-1"><strong>Email:</strong> info@dentalclinic.com</p>
                    <p class="mb-0"><strong>Website:</strong> www.dentalclinic.com</p>
                </div>
                <div class="col-md-6 clinic-info">
                    <h2 class="text-primary">INVOICE</h2>
                    <p class="mb-1"><strong>Invoice #:</strong> @Model.InvoiceNumber</p>
                    <p class="mb-1"><strong>Date:</strong> @Model.InvoiceDate.ToString("dd/MM/yyyy")</p>
                    <p class="mb-0"><strong>Due Date:</strong> @Model.DueDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Patient Information -->
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="invoice-details">
                    <h5 class="text-primary mb-3">Bill To:</h5>
                    <p class="mb-1"><strong>@Model.Patient?.FullName</strong></p>
                    @if (!string.IsNullOrEmpty(Model.Patient?.Address))
                    {
                        <p class="mb-1">@Model.Patient.Address</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Patient?.Phone))
                    {
                        <p class="mb-1">Phone: @Model.Patient.Phone</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.Patient?.Email))
                    {
                        <p class="mb-0">Email: @Model.Patient.Email</p>
                    }
                </div>
            </div>
            <div class="col-md-6">
                <div class="invoice-details">
                    <h5 class="text-primary mb-3">Invoice Details:</h5>
                    <p class="mb-1"><strong>Status:</strong> 
                        @switch (Model.Status)
                        {
                            case "Paid":
                                <span class="text-success">Paid</span>
                                break;
                            case "Unpaid":
                                <span class="text-danger">Unpaid</span>
                                break;
                            case "Partially Paid":
                                <span class="text-warning">Partially Paid</span>
                                break;
                            case "Overdue":
                                <span class="text-dark">Overdue</span>
                                break;
                            default:
                                <span>@Model.Status</span>
                                break;
                        }
                    </p>
                    @if (Model.Treatment != null)
                    {
                        <p class="mb-1"><strong>Treatment:</strong> @Model.Treatment.TreatmentType</p>
                        <p class="mb-1"><strong>Treatment Date:</strong> @Model.Treatment.TreatmentDate.ToString("dd/MM/yyyy")</p>
                    }
                    <p class="mb-0"><strong>Created:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Services/Items Table -->
        <div class="table-responsive mb-4">
            <table class="table table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Description</th>
                        <th class="text-center">Quantity</th>
                        <th class="text-end">Unit Price</th>
                        <th class="text-end">Total</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @if (Model.Treatment != null)
                            {
                                <strong>@Model.Treatment.TreatmentType</strong>
                                @if (!string.IsNullOrEmpty(Model.Treatment.Description))
                                {
                                    <br><small class="text-muted">@Model.Treatment.Description</small>
                                }
                            }
                            else
                            {
                                <strong>Dental Services</strong>
                            }
                        </td>
                        <td class="text-center">1</td>
                        <td class="text-end">$@Model.TotalAmount.ToString("N2")</td>
                        <td class="text-end">$@Model.TotalAmount.ToString("N2")</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Financial Summary -->
        <div class="row">
            <div class="col-md-6">
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="invoice-details">
                        <h5 class="text-primary mb-3">Notes:</h5>
                        <p class="mb-0">@Model.Notes</p>
                    </div>
                }
            </div>
            <div class="col-md-6">
                <div class="total-section">
                    <table class="table table-sm mb-0">
                        <tr>
                            <td><strong>Subtotal:</strong></td>
                            <td class="text-end">$@Model.TotalAmount.ToString("N2")</td>
                        </tr>
                        @if (Model.DiscountAmount > 0)
                        {
                            <tr>
                                <td>Discount:</td>
                                <td class="text-end text-success">-$@Model.DiscountAmount.ToString("N2")</td>
                            </tr>
                        }
                        @if (Model.InsuranceAmount > 0)
                        {
                            <tr>
                                <td>Insurance Coverage:</td>
                                <td class="text-end text-info">-$@Model.InsuranceAmount.ToString("N2")</td>
                            </tr>
                        }
                        <tr class="table-primary">
                            <td><strong>Total Amount:</strong></td>
                            <td class="text-end"><strong>$@((Model.TotalAmount - Model.DiscountAmount - Model.InsuranceAmount)).ToString("N2")</strong></td>
                        </tr>
                        @if (Model.PaidAmount > 0)
                        {
                            <tr>
                                <td>Amount Paid:</td>
                                <td class="text-end text-success">$@Model.PaidAmount.ToString("N2")</td>
                            </tr>
                        }
                        @{
                            var remaining = Model.TotalAmount - Model.DiscountAmount - Model.InsuranceAmount - Model.PaidAmount;
                        }
                        @if (remaining > 0)
                        {
                            <tr class="table-warning">
                                <td><strong>Amount Due:</strong></td>
                                <td class="text-end"><strong class="text-danger">$@remaining.ToString("N2")</strong></td>
                            </tr>
                        }
                        else
                        {
                            <tr class="table-success">
                                <td><strong>Amount Due:</strong></td>
                                <td class="text-end"><strong class="text-success">$0.00</strong></td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="mt-5 pt-4 border-top text-center text-muted">
            <p class="mb-1">Thank you for choosing our dental clinic!</p>
            <p class="mb-0">For any questions regarding this invoice, please contact us at +1 (555) 123-4567</p>
        </div>
    </div>

    <script>
        // Auto print when page loads (optional)
        // window.onload = function() { window.print(); }
    </script>
</body>
</html>
