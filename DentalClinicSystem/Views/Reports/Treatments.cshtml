@model IEnumerable<DentalClinicSystem.Models.Treatment>
@{
    ViewData["Title"] = "Treatments Report";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-procedures me-2 text-primary"></i>Treatments Report</h2>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Reports
        </a>
        <button class="btn btn-success" onclick="exportToExcel()">
            <i class="fas fa-file-excel me-2"></i>Export Excel
        </button>
        <button class="btn btn-primary" onclick="window.print()">
            <i class="fas fa-print me-2"></i>Print Report
        </button>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0"><i class="fas fa-filter me-2"></i>Filter Options</h6>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Start Date</label>
                <input type="date" class="form-control" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">End Date</label>
                <input type="date" class="form-control" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Treatment Type</label>
                <input type="text" class="form-control" name="treatmentType" value="@ViewBag.TreatmentType" placeholder="Enter treatment type" />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search me-1"></i>Filter
                </button>
                <a asp-action="Treatments" class="btn btn-outline-secondary">
                    <i class="fas fa-undo me-1"></i>Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Summary Statistics -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Count()</h4>
                        <p class="mb-0">Total Treatments</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-procedures fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Count(t => t.Status == "مكتمل")</h4>
                        <p class="mb-0">Completed</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Count(t => t.Status == "قيد التنفيذ")</h4>
                        <p class="mb-0">In Progress</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 mb-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4 class="mb-0">@Model.Sum(t => t.Cost).ToString("C")</h4>
                        <p class="mb-0">Total Revenue</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-dollar-sign fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Treatments Table -->
<div class="card">
    <div class="card-header">
        <h6 class="mb-0"><i class="fas fa-table me-2"></i>Treatments List (@Model.Count() treatments)</h6>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover" id="treatmentsTable">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Patient</th>
                            <th>Dentist</th>
                            <th>Treatment Type</th>
                            <th>Cost</th>
                            <th>Status</th>
                            <th>Notes</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var treatment in Model)
                        {
                            <tr>
                                <td>@treatment.TreatmentId</td>
                                <td>@treatment.TreatmentDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    @if (treatment.Patient != null)
                                    {
                                        <div>
                                            <strong>@treatment.Patient.FullName</strong>
                                            <br><small class="text-muted">@treatment.Patient.PhoneNumber</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (treatment.Dentist != null)
                                    {
                                        <div>
                                            <strong>@treatment.Dentist.FullName</strong>
                                            <br><small class="text-muted">@treatment.Dentist.Specialization</small>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-primary">@treatment.TreatmentType</span>
                                </td>
                                <td>
                                    <strong class="text-success">@treatment.Cost.ToString("C")</strong>
                                </td>
                                <td>
                                    @{
                                        var statusClass = treatment.Status switch
                                        {
                                            "مكتمل" => "bg-success",
                                            "قيد التنفيذ" => "bg-warning",
                                            "ملغي" => "bg-danger",
                                            "مخطط" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@treatment.Status</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(treatment.Notes))
                                    {
                                        <span title="@treatment.Notes">
                                            @(treatment.Notes.Length > 30 ? treatment.Notes.Substring(0, 30) + "..." : treatment.Notes)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No notes</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Treatments" asp-action="Details" asp-route-id="@treatment.TreatmentId" 
                                           class="btn btn-outline-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Treatments" asp-action="Edit" asp-route-id="@treatment.TreatmentId" 
                                           class="btn btn-outline-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-procedures fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No treatments found</h5>
                <p class="text-muted">Try adjusting your filter criteria or check back later.</p>
            </div>
        }
    </div>
</div>

<!-- Treatment Types Chart -->
@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Treatment Types Distribution</h6>
                </div>
                <div class="card-body">
                    <canvas id="treatmentTypesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Treatment Status Overview</h6>
                </div>
                <div class="card-body">
                    <canvas id="treatmentStatusChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <script>
        $(document).ready(function() {
            $('#treatmentsTable').DataTable({
                "pageLength": 25,
                "order": [[ 1, "desc" ]],
                "columnDefs": [
                    { "orderable": false, "targets": 8 }
                ]
            });
        });

        function exportToExcel() {
            const table = document.getElementById('treatmentsTable');
            const wb = XLSX.utils.table_to_book(table, {sheet: "Treatments Report"});
            const filename = `Treatments_Report_${new Date().toISOString().split('T')[0]}.xlsx`;
            XLSX.writeFile(wb, filename);
        }

        @if (Model.Any())
        {
            <text>
            // Treatment Types Chart
            const treatmentTypes = @Html.Raw(Json.Serialize(Model.GroupBy(t => t.TreatmentType).Select(g => new { Type = g.Key, Count = g.Count() })));
            
            const typesCtx = document.getElementById('treatmentTypesChart').getContext('2d');
            new Chart(typesCtx, {
                type: 'doughnut',
                data: {
                    labels: treatmentTypes.map(t => t.type),
                    datasets: [{
                        data: treatmentTypes.map(t => t.count),
                        backgroundColor: ['#007bff', '#28a745', '#17a2b8', '#ffc107', '#dc3545', '#6f42c1', '#fd7e14'],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });

            // Treatment Status Chart
            const treatmentStatuses = @Html.Raw(Json.Serialize(Model.GroupBy(t => t.Status).Select(g => new { Status = g.Key, Count = g.Count() })));
            
            const statusCtx = document.getElementById('treatmentStatusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'bar',
                data: {
                    labels: treatmentStatuses.map(s => s.status),
                    datasets: [{
                        label: 'Number of Treatments',
                        data: treatmentStatuses.map(s => s.count),
                        backgroundColor: ['#28a745', '#ffc107', '#dc3545', '#17a2b8'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });
            </text>
        }
    </script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
    
    <style>
        @@media print {
            .btn-group, .card-header .btn {
                display: none !important;
            }
            .table {
                font-size: 12px;
            }
        }
    </style>
}
