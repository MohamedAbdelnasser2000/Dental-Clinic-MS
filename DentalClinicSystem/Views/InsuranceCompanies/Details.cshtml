@model DentalClinicSystem.Models.InsuranceCompany
@{
    ViewData["Title"] = "Insurance Company Details";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shield-alt me-2 text-primary"></i>Insurance Company Details</h2>
    <div class="btn-group">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
        <a asp-action="Edit" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-warning">
            <i class="fas fa-edit me-2"></i>Edit
        </a>
        <a asp-action="Delete" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-danger">
            <i class="fas fa-trash me-2"></i>Delete
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-building me-2"></i>@Model.CompanyName
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") ms-2">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-info-circle me-2"></i>Basic Information
                        </h6>
                        <div class="mb-2">
                            <strong>Company Name:</strong>
                            <span class="text-muted">@Model.CompanyName</span>
                        </div>
                        <div class="mb-2">
                            <strong>Phone Number:</strong>
                            <span class="text-muted">@(Model.PhoneNumber ?? "Not provided")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Email:</strong>
                            <span class="text-muted">@(Model.Email ?? "Not provided")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <h6 class="text-primary mb-2">
                            <i class="fas fa-percentage me-2"></i>Coverage Information
                        </h6>
                        <div class="mb-2">
                            <strong>Coverage Percentage:</strong>
                            <span class="text-success fw-bold">@Model.CoveragePercentage.ToString("F2")%</span>
                        </div>
                        @if (Model.MaxCoverageAmount.HasValue)
                        {
                            <div class="mb-2">
                                <strong>Maximum Coverage:</strong>
                                <span class="text-info fw-bold">@Model.MaxCoverageAmount.Value.ToString("C")</span>
                            </div>
                        }
                        else
                        {
                            <div class="mb-2">
                                <strong>Maximum Coverage:</strong>
                                <span class="text-muted">No limit specified</span>
                            </div>
                        }
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <hr class="my-4">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-map-marker-alt me-2"></i>Address
                    </h6>
                    <p class="text-muted">@Model.Address</p>
                }
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr class="my-4">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-sticky-note me-2"></i>Notes
                    </h6>
                    <p class="text-muted">@Model.Notes</p>
                }
                
                <hr class="my-4">
                <h6 class="text-primary mb-3">
                    <i class="fas fa-calendar me-2"></i>Timeline
                </h6>
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-2">
                            <strong>Created At:</strong>
                            <span class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Patients using this insurance -->
        @if (ViewBag.Patients != null && ((List<DentalClinicSystem.Models.Patient>)ViewBag.Patients).Any())
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-users me-2"></i>Patients Using This Insurance</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Patient Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var patient in (List<DentalClinicSystem.Models.Patient>)ViewBag.Patients)
                                {
                                    <tr>
                                        <td>@patient.FullName</td>
                                        <td>@patient.PhoneNumber</td>
                                        <td>@patient.Email</td>
                                        <td>
                                            <a asp-controller="Patients" asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Company Statistics</h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-shield-alt fa-3x text-primary mb-2"></i>
                        <h5 class="text-primary">@Model.CompanyName</h5>
                    </div>
                    
                    <div class="row text-center">
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="text-success mb-1">@Model.CoveragePercentage.ToString("F1")%</h4>
                                <small class="text-muted">Coverage</small>
                            </div>
                        </div>
                        <div class="col-6">
                            @if (Model.MaxCoverageAmount.HasValue)
                            {
                                <h4 class="text-info mb-1">@Model.MaxCoverageAmount.Value.ToString("C0")</h4>
                                <small class="text-muted">Max Coverage</small>
                            }
                            else
                            {
                                <h4 class="text-muted mb-1">âˆž</h4>
                                <small class="text-muted">No Limit</small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-calculator me-2"></i>Coverage Calculator</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <label class="form-label small">Treatment Cost ($)</label>
                    <input type="number" id="treatmentCost" class="form-control form-control-sm" placeholder="0.00" step="0.01">
                </div>
                <button type="button" class="btn btn-sm btn-outline-primary w-100" onclick="calculateCoverage()">
                    Calculate Coverage
                </button>
                <div id="coverageResult" class="mt-2 text-center"></div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Company
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Company
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list me-2"></i>All Companies
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function calculateCoverage() {
        const cost = parseFloat(document.getElementById('treatmentCost').value) || 0;
        const percentage = @Model.CoveragePercentage;
        const maxCoverage = @(Model.MaxCoverageAmount?.ToString() ?? "null");
        
        if (cost > 0) {
            let coverage = (cost * percentage / 100);
            
            // Apply maximum coverage limit if exists
            if (maxCoverage !== null && coverage > maxCoverage) {
                coverage = maxCoverage;
            }
            
            const patientPays = (cost - coverage).toFixed(2);
            coverage = coverage.toFixed(2);
            
            document.getElementById('coverageResult').innerHTML = `
                <div class="small">
                    <div class="text-success"><strong>Insurance Covers: $${coverage}</strong></div>
                    <div class="text-warning"><strong>Patient Pays: $${patientPays}</strong></div>
                </div>
            `;
        } else {
            document.getElementById('coverageResult').innerHTML = '';
        }
    }
    
    // Auto-calculate when value changes
    document.getElementById('treatmentCost').addEventListener('input', calculateCoverage);
</script>

<style>
.bg-pink {
    background-color: #e91e63 !important;
}
</style>
