@model DentalClinicSystem.Models.InsuranceCompany
@{
    ViewData["Title"] = "Delete Insurance Company";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash me-2 text-danger"></i>Delete Insurance Company</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h6><i class="fas fa-warning me-2"></i>Warning!</h6>
                    <p class="mb-0">
                        Are you sure you want to delete this insurance company? This action cannot be undone.
                        All patients using this insurance will be affected.
                    </p>
                </div>
                
                <h6 class="text-primary mb-3">
                    <i class="fas fa-info-circle me-2"></i>Company Details
                </h6>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">
                            <strong>Company Name:</strong>
                            <span class="text-muted">@Model.CompanyName</span>
                        </div>
                        <div class="mb-2">
                            <strong>Phone Number:</strong>
                            <span class="text-muted">@(Model.PhoneNumber ?? "Not provided")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Email:</strong>
                            <span class="text-muted">@(Model.Email ?? "Not provided")</span>
                        </div>
                        <div class="mb-2">
                            <strong>Status:</strong>
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <div class="mb-2">
                            <strong>Coverage Percentage:</strong>
                            <span class="text-success fw-bold">@Model.CoveragePercentage.ToString("F2")%</span>
                        </div>
                        @if (Model.MaxCoverageAmount.HasValue)
                        {
                            <div class="mb-2">
                                <strong>Maximum Coverage:</strong>
                                <span class="text-info fw-bold">@Model.MaxCoverageAmount.Value.ToString("C")</span>
                            </div>
                        }
                        else
                        {
                            <div class="mb-2">
                                <strong>Maximum Coverage:</strong>
                                <span class="text-muted">No limit specified</span>
                            </div>
                        }
                        <div class="mb-2">
                            <strong>Created:</strong>
                            <span class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div class="mb-3">
                        <strong>Address:</strong>
                        <p class="text-muted mt-1">@Model.Address</p>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <strong>Notes:</strong>
                        <p class="text-muted mt-1">@Model.Notes</p>
                    </div>
                }
                
                <hr class="my-4">
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="InsuranceCompanyId" />
                    
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-info me-2">
                            <i class="fas fa-eye me-2"></i>View Details
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Company
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Important Information</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h6><i class="fas fa-exclamation-triangle me-2"></i>Before Deleting:</h6>
                    <ul class="mb-0 small">
                        <li>Check if patients are using this insurance</li>
                        <li>Verify no active treatments are covered</li>
                        <li>Consider deactivating instead of deleting</li>
                        <li>Backup important data if needed</li>
                    </ul>
                </div>
                
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb me-2"></i>Alternative:</h6>
                    <p class="mb-0 small">
                        Instead of deleting, you can deactivate this insurance company to preserve historical data
                        while preventing new assignments.
                    </p>
                </div>
                
                <div class="alert alert-danger">
                    <h6><i class="fas fa-ban me-2"></i>Deletion Restrictions:</h6>
                    <p class="mb-0 small">
                        This company cannot be deleted if it's currently assigned to any patients.
                        You must reassign or remove patient insurance first.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Company Summary</h6>
            </div>
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-2"></i>
                    <h6 class="text-primary">@Model.CompanyName</h6>
                </div>
                
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h5 class="text-success mb-1">@Model.CoveragePercentage.ToString("F1")%</h5>
                            <small class="text-muted">Coverage</small>
                        </div>
                    </div>
                    <div class="col-6">
                        @if (Model.MaxCoverageAmount.HasValue)
                        {
                            <h5 class="text-info mb-1">@Model.MaxCoverageAmount.Value.ToString("C0")</h5>
                            <small class="text-muted">Max Coverage</small>
                        }
                        else
                        {
                            <h5 class="text-muted mb-1">âˆž</h5>
                            <small class="text-muted">No Limit</small>
                        }
                    </div>
                </div>
                
                <div class="mt-3">
                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                        @(Model.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-cog me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Details" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-info">
                        <i class="fas fa-eye me-2"></i>View Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.InsuranceCompanyId" class="btn btn-warning">
                        <i class="fas fa-edit me-2"></i>Edit Company
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-list me-2"></i>All Companies
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.bg-pink {
    background-color: #e91e63 !important;
}
</style>
