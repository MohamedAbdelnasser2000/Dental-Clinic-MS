@model DentalClinicSystem.Models.Patient
@{
    ViewData["Title"] = "تعديل بيانات المريض";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-edit me-2"></i>تعديل بيانات المريض</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>العودة للقائمة
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i>معلومات المريض</h5>
            </div>
            <div class="card-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="PatientId" />
                    <input type="hidden" asp-for="RegistrationDate" />
                    <input type="hidden" asp-for="CreatedByUserId" />

                    <!-- Personal Information -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label">الاسم الكامل</label>
                            <input asp-for="FullName" class="form-control" placeholder="أدخل الاسم الكامل" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Gender" class="form-label">النوع</label>
                            <select asp-for="Gender" class="form-select">
                                <option value="">اختر النوع</option>
                                <option value="Male">ذكر</option>
                                <option value="Female">أنثى</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="NationalId" class="form-label">الرقم القومي</label>
                            <input asp-for="NationalId" class="form-control" placeholder="أدخل الرقم القومي" />
                            <span asp-validation-for="NationalId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PassportNumber" class="form-label">رقم جواز السفر</label>
                            <input asp-for="PassportNumber" class="form-control" placeholder="أدخل رقم جواز السفر" />
                            <span asp-validation-for="PassportNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateOfBirth" class="form-label">تاريخ الميلاد</label>
                            <input asp-for="DateOfBirth" type="date" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="InsuranceCompanyId" class="form-label">شركة التأمين</label>
                            <select asp-for="InsuranceCompanyId" class="form-select" asp-items="ViewBag.InsuranceCompanies">
                                <option value="">بدون تأمين</option>
                            </select>
                            <span asp-validation-for="InsuranceCompanyId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <h6 class="mt-4 mb-3"><i class="fas fa-address-book me-2"></i>معلومات الاتصال</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label">رقم الهاتف</label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="أدخل رقم الهاتف" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="أدخل البريد الإلكتروني" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">العنوان</label>
                        <textarea asp-for="Address" class="form-control" rows="2" placeholder="أدخل العنوان"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Medical Information -->
                    <h6 class="mt-4 mb-3"><i class="fas fa-heartbeat me-2"></i>المعلومات الطبية</h6>
                    <div class="mb-3">
                        <label asp-for="MedicalHistory" class="form-label">التاريخ المرضي</label>
                        <textarea asp-for="MedicalHistory" class="form-control" rows="3" placeholder="أدخل التاريخ المرضي"></textarea>
                        <span asp-validation-for="MedicalHistory" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Allergies" class="form-label">الحساسية من الأدوية</label>
                        <textarea asp-for="Allergies" class="form-control" rows="2" placeholder="أدخل الحساسية من الأدوية"></textarea>
                        <span asp-validation-for="Allergies" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">ملاحظات</label>
                        <textarea asp-for="Notes" class="form-control" rows="2" placeholder="أدخل ملاحظات إضافية"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>

                    <!-- Status -->
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label">
                                المريض نشط
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">
                            <i class="fas fa-times me-2"></i>إلغاء
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>حفظ التغييرات
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>معلومات مهمة</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>الاسم الكامل مطلوب</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>رقم الهاتف مهم للتواصل</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>التاريخ المرضي يساعد في العلاج</li>
                    <li class="mb-2"><i class="fas fa-check text-success me-2"></i>معلومات الحساسية مهمة للأمان</li>
                </ul>
                
                <div class="mt-3 p-3 bg-light rounded">
                    <small class="text-muted">
                        <strong>تاريخ التسجيل:</strong><br>
                        @Model.RegistrationDate.ToString("dd/MM/yyyy hh:mm tt")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
