@model IEnumerable<DentalClinicSystem.Models.Patient>
@{
    ViewData["Title"] = "Patients Management";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users me-2 text-primary"></i>Patients Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>Add New Patient
    </a>
</div>

<!-- Search and Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search by name, phone, national ID..." />
            </div>
            <div class="col-md-3">
                <label class="form-label">Insurance Company</label>
                <select name="insuranceCompanyId" class="form-select">
                    <option value="">All Companies</option>
                    @foreach (var item in ViewBag.InsuranceCompanies as SelectList)
                    {
                        <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Results per page</label>
                <select name="pageSize" class="form-select">
                    <option value="10" selected="@(ViewBag.PageSize == 10)">10</option>
                    <option value="25" selected="@(ViewBag.PageSize == 25)">25</option>
                    <option value="50" selected="@(ViewBag.PageSize == 50)">50</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-outline-primary me-2">
                    <i class="fas fa-search me-1"></i>Search
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-undo me-1"></i>Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>
    Total Patients: @ViewBag.TotalCount | Page @ViewBag.CurrentPage of @ViewBag.TotalPages
</div>

<!-- Patients Table -->
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Age</th>
                        <th>Insurance Company</th>
                        <th>Registration Date</th>
                        <th>Last Visit</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td>
                                <strong>@patient.FullName</strong>
                                @if (!string.IsNullOrEmpty(patient.NationalId))
                                {
                                    <br><small class="text-muted">ID: @patient.NationalId</small>
                                }
                            </td>
                            <td>@patient.PhoneNumber</td>
                            <td>
                                @if (patient.DateOfBirth.HasValue)
                                {
                                    <text>@((DateTime.Now.Year - patient.DateOfBirth.Value.Year)) years</text>
                                }
                                else
                                {
                                    <span class="text-muted">Not specified</span>
                                }
                            </td>
                            <td>
                                @if (patient.InsuranceCompany != null)
                                {
                                    <span class="badge bg-info">@patient.InsuranceCompany.CompanyName</span>
                                }
                                else
                                {
                                    <span class="text-muted">No insurance</span>
                                }
                            </td>
                            <td>@patient.RegistrationDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (patient.LastVisit.HasValue)
                                {
                                    @patient.LastVisit.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">No visits</span>
                                }
                            </td>
                            <td>
                                @if (patient.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@patient.PatientId" class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@patient.PatientId" class="btn btn-sm btn-outline-warning" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@patient.PatientId" class="btn btn-sm btn-outline-danger" title="حذف نهائي">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (ViewBag.TotalPages > 1)
        {
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(ViewBag.CurrentPage - 1)&searchString=@ViewBag.SearchString&insuranceCompanyId=@ViewBag.InsuranceCompanyId&pageSize=@ViewBag.PageSize">Previous</a>
                        </li>
                    }

                    @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i&searchString=@ViewBag.SearchString&insuranceCompanyId=@ViewBag.InsuranceCompanyId&pageSize=@ViewBag.PageSize">@i</a>
                        </li>
                    }

                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(ViewBag.CurrentPage + 1)&searchString=@ViewBag.SearchString&insuranceCompanyId=@ViewBag.InsuranceCompanyId&pageSize=@ViewBag.PageSize">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>
