@model DentalClinicSystem.Models.Insurance
@{
    ViewData["Title"] = "Add New Insurance Policy";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-shield-alt me-2 text-primary"></i>Add New Insurance Policy</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-plus me-2"></i>Insurance Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <!-- Patient Information -->
                    <h6 class="text-primary mb-3"><i class="fas fa-user me-2"></i>Patient Information</h6>
                    <div class="mb-3">
                        <label asp-for="PatientId" class="form-label">Patient *</label>
                        @Html.DropDownListFor(m => m.PatientId, ViewBag.Patients as SelectList, "Select Patient", new { @class = "form-select", @required = "required" })
                        <span asp-validation-for="PatientId" class="text-danger"></span>
                    </div>
                    
                    <!-- Insurance Provider Information -->
                    <h6 class="text-primary mb-3 mt-4"><i class="fas fa-building me-2"></i>Insurance Provider</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProviderName" class="form-label">Provider Name *</label>
                            <input asp-for="ProviderName" class="form-control" placeholder="Enter insurance provider name" required />
                            <span asp-validation-for="ProviderName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="PolicyNumber" class="form-label">Policy Number *</label>
                            <input asp-for="PolicyNumber" class="form-control" placeholder="Enter policy number" required />
                            <span asp-validation-for="PolicyNumber" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProviderPhone" class="form-label">Provider Phone</label>
                            <input asp-for="ProviderPhone" class="form-control" placeholder="Provider contact number" />
                            <span asp-validation-for="ProviderPhone" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="ProviderEmail" class="form-label">Provider Email</label>
                            <input asp-for="ProviderEmail" type="email" class="form-control" placeholder="Provider email address" />
                            <span asp-validation-for="ProviderEmail" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <!-- Coverage Information -->
                    <h6 class="text-primary mb-3 mt-4"><i class="fas fa-percentage me-2"></i>Coverage Details</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="StartDate" class="form-label">Start Date *</label>
                            <input asp-for="StartDate" type="date" class="form-control" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="ExpiryDate" class="form-label">Expiry Date *</label>
                            <input asp-for="ExpiryDate" type="date" class="form-control" required />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CoveragePercentage" class="form-label">Coverage Percentage (%) *</label>
                            <input asp-for="CoveragePercentage" type="number" min="0" max="100" step="0.01" class="form-control" placeholder="0.00" required />
                            <div class="form-text">Percentage of treatment costs covered</div>
                            <span asp-validation-for="CoveragePercentage" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="MaxCoverageAmount" class="form-label">Maximum Coverage Amount ($)</label>
                            <input asp-for="MaxCoverageAmount" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            <div class="form-text">Maximum amount covered per year (optional)</div>
                            <span asp-validation-for="MaxCoverageAmount" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <!-- Additional Information -->
                    <h6 class="text-primary mb-3 mt-4"><i class="fas fa-info-circle me-2"></i>Additional Information</h6>
                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">Notes</label>
                        <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Additional notes about the insurance policy..."></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                            <label asp-for="IsActive" class="form-check-label">
                                Active Policy
                            </label>
                        </div>
                        <div class="form-text">Check this box if the insurance policy is currently active</div>
                    </div>
                    
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Save Insurance Policy
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Insurance Guidelines</h6>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6><i class="fas fa-lightbulb me-2"></i>Tips:</h6>
                    <ul class="mb-0 small">
                        <li>Verify policy details with provider</li>
                        <li>Check coverage limitations</li>
                        <li>Confirm patient eligibility</li>
                        <li>Keep provider contact information updated</li>
                        <li>Monitor expiry dates regularly</li>
                    </ul>
                </div>
                
                <div class="alert alert-warning">
                    <h6><i class="fas fa-shield-alt me-2"></i>Common Providers:</h6>
                    <ul class="mb-0 small">
                        <li>Delta Dental</li>
                        <li>MetLife</li>
                        <li>Cigna</li>
                        <li>Aetna</li>
                        <li>Blue Cross Blue Shield</li>
                        <li>Humana</li>
                    </ul>
                </div>
                
                <div class="alert alert-success">
                    <h6><i class="fas fa-calculator me-2"></i>Coverage Calculator:</h6>
                    <div class="mb-2">
                        <label class="form-label small">Treatment Cost ($)</label>
                        <input type="number" id="treatmentCost" class="form-control form-control-sm" placeholder="0.00" step="0.01">
                    </div>
                    <div class="mb-2">
                        <label class="form-label small">Coverage % (from above)</label>
                        <input type="number" id="coveragePercent" class="form-control form-control-sm" placeholder="0" min="0" max="100">
                    </div>
                    <button type="button" class="btn btn-sm btn-outline-success w-100" onclick="calculateCoverage()">
                        Calculate Coverage
                    </button>
                    <div id="coverageResult" class="mt-2 text-center"></div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Quick Date Settings</h6>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-sm btn-outline-primary w-100 mb-2" onclick="setDateRange(365)">
                    1 Year Policy
                </button>
                <button type="button" class="btn btn-sm btn-outline-primary w-100 mb-2" onclick="setDateRange(730)">
                    2 Year Policy
                </button>
                <button type="button" class="btn btn-sm btn-outline-primary w-100" onclick="setDateRange(1095)">
                    3 Year Policy
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Set default dates
        document.addEventListener('DOMContentLoaded', function() {
            const startDateInput = document.querySelector('input[name="StartDate"]');
            const expiryDateInput = document.querySelector('input[name="ExpiryDate"]');
            
            if (!startDateInput.value) {
                startDateInput.value = new Date().toISOString().split('T')[0];
            }
            
            if (!expiryDateInput.value) {
                const nextYear = new Date();
                nextYear.setFullYear(nextYear.getFullYear() + 1);
                expiryDateInput.value = nextYear.toISOString().split('T')[0];
            }
        });
        
        function setDateRange(days) {
            const startDate = new Date();
            const endDate = new Date();
            endDate.setDate(startDate.getDate() + days);
            
            document.querySelector('input[name="StartDate"]').value = startDate.toISOString().split('T')[0];
            document.querySelector('input[name="ExpiryDate"]').value = endDate.toISOString().split('T')[0];
        }
        
        function calculateCoverage() {
            const treatmentCost = parseFloat(document.getElementById('treatmentCost').value) || 0;
            const coveragePercent = parseFloat(document.getElementById('coveragePercent').value) || 0;
            
            if (treatmentCost > 0 && coveragePercent > 0) {
                const coveredAmount = treatmentCost * (coveragePercent / 100);
                const patientPays = treatmentCost - coveredAmount;
                
                document.getElementById('coverageResult').innerHTML = `
                    <div class="small">
                        <strong>Insurance Covers:</strong> $${coveredAmount.toFixed(2)}<br>
                        <strong>Patient Pays:</strong> $${patientPays.toFixed(2)}
                    </div>
                `;
            } else {
                document.getElementById('coverageResult').innerHTML = '<small class="text-muted">Enter values to calculate</small>';
            }
        }
        
        // Auto-sync coverage percentage with calculator
        document.addEventListener('DOMContentLoaded', function() {
            const mainCoverageInput = document.querySelector('input[name="CoveragePercentage"]');
            const calcCoverageInput = document.getElementById('coveragePercent');
            
            mainCoverageInput.addEventListener('input', function() {
                calcCoverageInput.value = this.value;
                calculateCoverage();
            });
            
            calcCoverageInput.addEventListener('input', function() {
                mainCoverageInput.value = this.value;
            });
        });
    </script>
}
