@model DentalClinicSystem.Models.Prescription
@{
    ViewData["Title"] = "Delete Prescription";
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash me-2 text-danger"></i>Delete Prescription</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-2"></i>Back to List
    </a>
</div>

<div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle me-2"></i>
    <strong>Warning!</strong> Are you sure you want to delete this prescription? This action cannot be undone.
</div>

<div class="row">
    <div class="col-md-8">
        <!-- Prescription Information -->
        <div class="card mb-4">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-prescription-bottle-alt me-2"></i>Prescription to be Deleted</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Patient:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-user-circle me-2 text-muted"></i>
                                <strong>@Model.Patient?.FullName</strong>
                            </dd>
                            
                            <dt class="col-sm-4">Dentist:</dt>
                            <dd class="col-sm-8">
                                <i class="fas fa-user-md me-2 text-muted"></i>
                                @Model.Dentist?.FullName
                            </dd>
                            
                            <dt class="col-sm-4">Date:</dt>
                            <dd class="col-sm-8">@Model.PrescriptionDate.ToString("dd/MM/yyyy")</dd>
                            
                            <dt class="col-sm-4">Created:</dt>
                            <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Medication:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary fs-6">@Model.Medication</span>
                            </dd>
                            
                            <dt class="col-sm-4">Dosage:</dt>
                            <dd class="col-sm-8">
                                <span class="text-info fw-bold">@Model.Dosage</span>
                            </dd>
                            
                            @if (Model.Treatment != null)
                            {
                                <dt class="col-sm-4">Treatment:</dt>
                                <dd class="col-sm-8">
                                    <span class="text-muted">@Model.Treatment.TreatmentType</span>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Instructions))
                {
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <dt>Instructions:</dt>
                            <dd class="mt-2">
                                <div class="alert alert-info">
                                    @Model.Instructions
                                </div>
                            </dd>
                        </div>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <hr>
                    <div class="row">
                        <div class="col-12">
                            <dt>Notes:</dt>
                            <dd class="mt-2">
                                <div class="alert alert-light">
                                    @Model.Notes
                                </div>
                            </dd>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <!-- Medication Summary -->
        <div class="card mb-4">
            <div class="card-header bg-warning">
                <h5 class="mb-0"><i class="fas fa-pills me-2"></i>Medication Summary</h5>
            </div>
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-prescription-bottle-alt fa-3x text-primary mb-2"></i>
                    <h4 class="text-primary">@Model.Medication</h4>
                    <p class="text-muted mb-0">@Model.Dosage</p>
                </div>
                
                <hr>
                
                <div class="row text-center">
                    <div class="col-6">
                        <small class="text-muted">Prescribed by</small>
                        <p class="mb-0 fw-bold">@Model.Dentist?.FullName</p>
                    </div>
                    <div class="col-6">
                        <small class="text-muted">Date</small>
                        <p class="mb-0 fw-bold">@Model.PrescriptionDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Delete Confirmation -->
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <p class="text-danger mb-3">
                    <strong>This action is permanent and cannot be undone!</strong>
                </p>
                
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="PrescriptionId" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Yes, Delete Prescription
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
