@model DentalClinicSystem.Models.Dentist
@{
    ViewData["Title"] = "تعديل بيانات الطبيب";
    Layout = "_DashboardLayout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>تعديل بيانات الطبيب
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>
                        
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["ErrorMessage"]
                            </div>
                        }

                        <input type="hidden" asp-for="DentistId" />
                        <input type="hidden" asp-for="JoinDate" />
                        <input type="hidden" asp-for="PhotoPath" />

                        <!-- Personal Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2 mb-3">
                                    <i class="fas fa-user me-2"></i>المعلومات الشخصية
                                </h6>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">الاسم الأول *</label>
                                <input asp-for="FirstName" class="form-control" placeholder="أدخل الاسم الأول" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">الاسم الأخير *</label>
                                <input asp-for="LastName" class="form-control" placeholder="أدخل الاسم الأخير" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateOfBirth" class="form-label">تاريخ الميلاد</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Gender" class="form-label">الجنس</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">اختر الجنس</option>
                                    <option value="Male">ذكر</option>
                                    <option value="Female">أنثى</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <label asp-for="Address" class="form-label">العنوان</label>
                                <textarea asp-for="Address" class="form-control" rows="2" placeholder="أدخل العنوان الكامل"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">الصورة الشخصية</label>
                                <input type="file" name="PhotoFile" class="form-control" accept="image/*" />
                                <div class="form-text">اختر صورة جديدة لتحديث الصورة الحالية (اختياري)</div>
                                @if (!string.IsNullOrEmpty(Model.PhotoPath))
                                {
                                    <div class="mt-2">
                                        <small class="text-muted">الصورة الحالية:</small><br>
                                        <img src="@Model.PhotoPath" alt="الصورة الحالية" class="img-thumbnail mt-1" style="max-width: 100px; max-height: 100px;">
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Contact Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2 mb-3">
                                    <i class="fas fa-phone me-2"></i>معلومات الاتصال
                                </h6>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">البريد الإلكتروني *</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="example@email.com" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label">رقم الهاتف *</label>
                                <input asp-for="Phone" class="form-control" placeholder="05xxxxxxxx" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Professional Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h6 class="text-primary border-bottom pb-2 mb-3">
                                    <i class="fas fa-stethoscope me-2"></i>المعلومات المهنية
                                </h6>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Specialization" class="form-label">التخصص *</label>
                                <select asp-for="Specialization" class="form-select" required>
                                    <option value="">اختر التخصص</option>
                                    <option value="General Dentistry">طب الأسنان العام</option>
                                    <option value="Orthodontics">تقويم الأسنان</option>
                                    <option value="Oral Surgery">جراحة الفم والأسنان</option>
                                    <option value="Endodontics">علاج الجذور</option>
                                    <option value="Periodontics">علاج اللثة</option>
                                    <option value="Prosthodontics">تركيبات الأسنان</option>
                                    <option value="Pediatric Dentistry">طب أسنان الأطفال</option>
                                    <option value="Oral Medicine">طب الفم</option>
                                    <option value="Cosmetic Dentistry">تجميل الأسنان</option>
                                </select>
                                <span asp-validation-for="Specialization" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LicenseNumber" class="form-label">رقم الترخيص *</label>
                                <input asp-for="LicenseNumber" class="form-control" placeholder="أدخل رقم الترخيص" required />
                                <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="YearsOfExperience" class="form-label">سنوات الخبرة</label>
                                <input asp-for="YearsOfExperience" type="number" class="form-control" min="0" max="50" placeholder="0" />
                                <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IsActive" class="form-label">الحالة</label>
                                <select asp-for="IsActive" class="form-select">
                                    <option value="true">نشط</option>
                                    <option value="false">غير نشط</option>
                                </select>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </div>
                            <div class="col-12 mb-3">
                                <label asp-for="Qualifications" class="form-label">المؤهلات والشهادات</label>
                                <textarea asp-for="Qualifications" class="form-control" rows="3" placeholder="أدخل المؤهلات والشهادات"></textarea>
                                <span asp-validation-for="Qualifications" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>إلغاء
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>حفظ التغييرات
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
